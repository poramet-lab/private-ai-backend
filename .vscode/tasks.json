{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Run Uvicorn (dev)",
        "type": "shell",
        "command": "bash",
        "args": [
            "-lc",
            "source .venv/bin/activate && uvicorn main:app --host 127.0.0.1 --port 8081 --reload"
        ],
        "options": {
            "cwd": "${workspaceFolder}",
            "env": {
                "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
            }
        },
        "presentation": {
            "reveal": "always",
            "panel": "dedicated",
            "clear": true
        },
        "problemMatcher": [],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }
]
}
